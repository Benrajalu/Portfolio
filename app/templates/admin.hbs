<div class="content wysiwyg" id="admin">
  <nav id="admin-nav">
    <ul>
      <li><button {{ action "goToList"}} class="{{if theList "active" }}"><span>Current <br/><strong>projects</strong> ({{ model.length }})</span></button></li>
      <li><button {{ action "goToNew"}} class="{{if theNew "active" }}"><span>New <br/><strong>project</strong></span></button></li>
      <li {{action "gotoHome"}}>{{# link-to 'index'}}Back to site{{/ link-to}}</li>
    </ul>
  </nav>

  <div class="visible-content">
    {{#liquid-if theList class="admin-section"}}
      <div class="admin-content" id="current-posts">
        <h3 class="list-title">Current entries</h3>
        <ul class="listing">
          {{#each model as |workEntry|}}
            <li>
              <article>
                <section class="element">
                  <h2>{{workEntry.title}}</h2>
                  <ul class="entry-menu">
                    <li><a href="#" class="view">View</a></li>
                    <li><a href="" class="edit">Edit</a></li>
                    <li><a href="#" {{ action "deleteRecord" workEntry.id }} class="remove">Remove</a></li>
                  </ul>
                </section>
                <section class="element logo">
                  <img src="{{workEntry.logo}}" alt="" />
                </section>
              </article>
            </li>
          {{/each}}
        </ul>
      </div>
    {{/liquid-if}}
    {{#liquid-if theNew class="admin-section"}}
      {{#admin-new postSaved="goToList" }}{{/admin-new}}
    {{/liquid-if}}
  </div>

  {{outlet}}
</div>
