<h2>New Post</h2>
<ul class="post-publish">
  <li>
    {{input value=title placeholder="Title"}}
  </li>
  <li>
    {{input value=type placeholder="Type"}}
  </li>
  <li>
    {{input value=subtitle placeholder="Subtitle"}}
  </li>
  <li>
    {{input value=teaser placeholder="Teaser Image"}}
  </li>
  <li>
    {{input value=logo placeholder="Logo"}}
  </li>
  <li>
    {{textarea value=intro placeholder="Intro"}}
  </li>
  <li>
    {{textarea value=body placeholder="Body"}}
  </li>
  <li>
    <button {{action "publishPost"}}>Publish</button>
  </li>
</ul>